<style>
  .dothan-footer {
    background-color: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 60px 0 30px;
    margin-top: auto;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
  }

  .dothan-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .dothan-footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 60px;
    margin-bottom: 40px;
  }

  /* Logo Section */
  .details-section {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .dothan-logo {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .logo-box {
    width: 60px;
    height: 60px;
    background-color: #333;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 24px;
    border-radius: 4px;
  }

  .logo-text-sub {
    font-size: 12px;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
    letter-spacing: 1px;
  }

  /* Details Section */
  .dothan-details h3 {
    color: #6c757d;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .detail-item {
    margin-bottom: 15px;
    line-height: 1.6;
  }

  .detail-item a {
    color: #495057;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .detail-item a:hover {
    color: #28a745;
    text-decoration: underline;
  }

  .address-link {
    display: block;
  }

  .social-icons {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }

  .social-icons a {
    color: #6c757d;
    transition: color 0.3s ease;
  }

  .social-icons a:hover {
    color: #28a745;
  }

  /* Store Hours Section */
  .hours-section h3 {
    color: #6c757d;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    color: #495057;
  }

  .hours-item.closed {
    color: #6c757d;
  }

  .days {
    font-weight: 500;
  }

  .times {
    color: #6c757d;
  }

  /* Store Policy Section */
  .policy-section h3 {
    color: #6c757d;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .policy-links a {
    color: #495057;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .policy-links a:hover {
    color: #28a745;
    text-decoration: underline;
  }

  .review-section {
    margin-top: 30px;
  }

  .review-section h4 {
    color: #6c757d;
    font-size: 16px;
    font-weight: 400;
    margin-bottom: 15px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .review-icons {
    display: flex;
    gap: 15px;
  }

  .review-icons a {
    color: #6c757d;
    transition: color 0.3s ease;
  }

  .review-icons a:hover {
    color: #28a745;
  }

  /* Copyright Section */
  .dothan-footer-bottom {
    border-top: 1px solid #e9ecef;
    padding-top: 20px;
    text-align: center;
  }

  .dothan-footer-bottom p {
    margin: 0;
    color: #6c757d;
    font-size: 14px;
  }

  .dothan-footer-bottom a {
    color: #6c757d;
    text-decoration: none;
  }

  .dothan-footer-bottom a:hover {
    color: #28a745;
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .dothan-footer-content {
      grid-template-columns: 1fr 1fr;
      gap: 40px;
    }

    .policy-section {
      grid-column: span 2;
      text-align: center;
    }
  }

  @media (max-width: 640px) {
    .dothan-footer {
      padding: 40px 0 20px;
    }

    .dothan-footer-content {
      grid-template-columns: 1fr;
      gap: 40px;
    }

    .policy-section {
      grid-column: span 1;
    }

    .dothan-logo {
      justify-content: center;
    }

    .hours-section,
    .policy-section {
      text-align: center;
    }

    .social-icons,
    .review-icons {
      justify-content: center;
    }
  }
</style>