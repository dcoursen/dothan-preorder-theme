{% doc %}
  @prompt
    create a custom theme section for the footer, that allows for me to hav e three texts nect to each other, it should look like a multicolumn buti need it for the footer to add texts

{% enddoc %}
{% assign ai_gen_id = section.id | replace: '_', '' | downcase %}

{% style %}
  .ai-footer-multicolumn-{{ ai_gen_id }} {
    padding: {{ section.settings.padding_top }}px 0 {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
    color: {{ section.settings.text_color }};}

  .ai-footer-multicolumn__container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-footer-multicolumn__grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: {{ section.settings.column_gap }}px;
    align-items: start;
  }

  .ai-footer-multicolumn__column-{{ ai_gen_id }} {
    text-align: {{ section.settings.text_alignment }};
  }

  .ai-footer-multicolumn__heading-{{ ai_gen_id }} {
    font-size: {{ section.settings.heading_size }}px;
    font-weight: 600;
    margin: 0 0 16px;
    color: {{ section.settings.heading_color }};
  }

  .ai-footer-multicolumn__text-{{ ai_gen_id }} {
    font-size: {{ section.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-footer-multicolumn__text-{{ ai_gen_id }} p {
    margin: 0 0 12px;
  }

  .ai-footer-multicolumn__text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-footer-multicolumn__text-{{ ai_gen_id }} a {
    color: {{ section.settings.link_color }};
    text-decoration: none;
  }

  .ai-footer-multicolumn__text-{{ ai_gen_id }} a:hover {
    color: {{ section.settings.link_hover_color }};
    text-decoration: underline;
  }

  @media screen and (max-width: 768px) {
    .ai-footer-multicolumn__grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ section.settings.columns_mobile }}, 1fr);
      gap: {{ section.settings.mobile_gap }}px;
    }

    .ai-footer-multicolumn__column-{{ ai_gen_id }} {
      text-align: {{ section.settings.mobile_text_alignment }};
    }

    .ai-footer-multicolumn__heading-{{ ai_gen_id }} {
      font-size: {{ section.settings.mobile_heading_size }}px;
    }

    .ai-footer-multicolumn__text-{{ ai_gen_id }} {
      font-size: {{ section.settings.mobile_text_size }}px;
    }
  }
{% endstyle %}<footer class="ai-footer-multicolumn-{{ ai_gen_id }}">
  <div class="ai-footer-multicolumn__container-{{ ai_gen_id }}">
    <div class="ai-footer-multicolumn__grid-{{ ai_gen_id }}">
      <div class="ai-footer-multicolumn__column-{{ ai_gen_id }}">
        {% if section.settings.column_1_heading != blank %}
          <h3 class="ai-footer-multicolumn__heading-{{ ai_gen_id }}">
            {{ section.settings.column_1_heading }}
          </h3>
        {% endif %}
        {% if section.settings.column_1_text != blank %}
          <div class="ai-footer-multicolumn__text-{{ ai_gen_id }}">
            {{ section.settings.column_1_text }}
          </div>
        {% endif %}
      </div>

      <div class="ai-footer-multicolumn__column-{{ ai_gen_id }}">
        {% if section.settings.column_2_heading != blank %}
          <h3 class="ai-footer-multicolumn__heading-{{ ai_gen_id }}">
            {{ section.settings.column_2_heading }}
          </h3>
        {% endif %}
        {% if section.settings.column_2_text != blank %}
          <div class="ai-footer-multicolumn__text-{{ ai_gen_id }}">
            {{ section.settings.column_2_text }}
          </div>
        {% endif %}
      </div>

      <div class="ai-footer-multicolumn__column-{{ ai_gen_id }}">
        {% if section.settings.column_3_heading != blank %}
          <h3 class="ai-footer-multicolumn__heading-{{ ai_gen_id }}">
            {{ section.settings.column_3_heading }}
          </h3>
        {% endif %}
        {% if section.settings.column_3_text != blank %}
          <div class="ai-footer-multicolumn__text-{{ ai_gen_id }}">
            {{ section.settings.column_3_text }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</footer>

