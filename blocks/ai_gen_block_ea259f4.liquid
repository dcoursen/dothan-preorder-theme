{% doc %}
  @prompt
    please create a section that is just like the rich text on the dawn theme, i need it to be exactly like the rich text from the dawn theme, i need it to have a header and then small text that goes under it, call in the ceneter of the page, its still too small, and it needs to be bigger and in the cneter of the page

{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-rich-text-{{ ai_gen_id }} {
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
    width: 100%;
  }

  .ai-rich-text-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-rich-text-content-{{ ai_gen_id }} {
    text-align: center;
    max-width: {{ block.settings.content_width }}px;
    margin: 0 auto;}

  .ai-rich-text-heading-{{ ai_gen_id }} {
    margin: 0 0 24px;
    font-size: {{ block.settings.heading_size }}px;
    line-height: 1.2;
    font-weight: bold;
  }

  .ai-rich-text-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.text_size }}px;
    line-height: 1.6;
    margin: 0;
  }

  .ai-rich-text-text-{{ ai_gen_id }} p {
    margin-bottom: 20px;
  }

  .ai-rich-text-text-{{ ai_gen_id }} p:last-child {
    margin-bottom: 0;
  }

  .ai-rich-text-text-{{ ai_gen_id }} ul,
  .ai-rich-text-text-{{ ai_gen_id }} ol {
    margin-bottom: 20px;padding-left: 20px;
    text-align: left;display: inline-block;
  }

  .ai-rich-text-text-{{ ai_gen_id }} li {
    margin-bottom: 8px;
  }

  .ai-rich-text-text-{{ ai_gen_id }} a {
    text-decoration: underline;
  }

  .ai-rich-text-text-{{ ai_gen_id }} strong {
    font-weight: bold;
  }

  .ai-rich-text-text-{{ ai_gen_id }} em {
    font-style: italic;
  }

  @media screen and (max-width: 749px) {
    .ai-rich-text-container-{{ ai_gen_id }} {
      padding: 0 15px;
    }

    .ai-rich-text-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.8 }}px;
      margin-bottom: 20px;
    }

    .ai-rich-text-text-{{ ai_gen_id }} {
      font-size: {{ block.settings.text_size | times: 0.9 }}px;}
  }
{% endstyle %}<div 
  class="ai-rich-text-{{ ai_gen_id }} color-{{ block.settings.color_scheme }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-rich-text-container-{{ ai_gen_id }}">
    <div class="ai-rich-text-content-{{ ai_gen_id }}">
      {% if block.settings.heading != blank %}
        <h2 class="ai-rich-text-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
      {% endif %}
      {% if block.settings.text != blank %}
        <div class="ai-rich-text-text-{{ ai_gen_id }}">{{ block.settings.text }}</div>
      {% endif %}
    </div>
  </div>
</div>

