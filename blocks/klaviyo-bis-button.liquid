{% comment %}
  Klaviyo Back in Stock Button Block
  Follows Shopify spacing pattern and provides standalone positioning
{% endcomment %}

{% render 'klaviyo-bis-integration', block: block %}

{% schema %}
{
  "name": "Back in Stock Button",
  "tag": null,
  "settings": [
    {
      "type": "paragraph",
      "content": "Displays a 'Get Early Access' or 'Notify When Back in Stock' button for sold-out products with Klaviyo integration."
    },
    {
      "type": "header",
      "content": "Spacing"
    },
    {
      "type": "range",
      "id": "padding-block-start",
      "label": "Top spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-block-end",
      "label": "Bottom spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 16
    },
    {
      "type": "range",
      "id": "padding-inline-start",
      "label": "Left spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    },
    {
      "type": "range",
      "id": "padding-inline-end",
      "label": "Right spacing",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "default": 0
    }
  ],
  "presets": [
    {
      "name": "Back in Stock Button",
      "category": "Product"
    }
  ]
}
{% endschema %}