{% comment %}
  Advanced Dothan Footer - Recreated to match live version
  Features: Contact, Hours, Reviews with ratings, Social Media, Policies
{% endcomment %}

<footer class="dothan-footer color-{{ section.settings.color_scheme }}"
        style="background-color: {{ section.settings.background_color | default: '#f8f9fa' }};">
  <div class="dothan-footer-container">
    <div class="dothan-footer-content">
      
      {% for block in section.blocks %}
        <div class="dothan-footer-section dothan-footer-section--{{ block.type }}" 
             id="block-{{ block.id }}"
             {{ block.shopify_attributes }}>
          
          {% case block.type %}
            
            {% when 'contact_us' %}
              <h3>{{ block.settings.heading | default: 'CONTACT US' }}</h3>
              
              {% if block.settings.show_logo %}
                <div class="dothan-logo">
                  <div class="logo-box">
                    <span class="logo-text-main">{{ block.settings.logo_text | default: 'DN' }}</span>
                  </div>
                  <div class="logo-text-sub">
                    {{ block.settings.business_name | default: 'DOTHAN<br>NURSERIES' }}
                  </div>
                </div>
              {% endif %}
              
              {% if block.settings.address != blank %}
                <div class="contact-item">
                  {{ block.settings.address | newline_to_br }}
                </div>
              {% endif %}
              
              {% if block.settings.email != blank %}
                <div class="contact-item">
                  <a href="mailto:{{ block.settings.email }}">{{ block.settings.email }}</a>
                </div>
              {% endif %}
              
              {% comment %} Social Media Icons integrated into Contact Us {% endcomment %}
              {% if block.settings.show_social_media %}
                <div class="social-section">
                  <h3>{{ block.settings.social_heading | default: 'FOLLOW US' }}</h3>
                  <div class="social-icons">
                    {% if block.settings.instagram_url != blank %}
                      <a href="{{ block.settings.instagram_url }}" target="_blank" aria-label="Instagram" class="social-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.facebook_url != blank %}
                      <a href="{{ block.settings.facebook_url }}" target="_blank" aria-label="Facebook" class="social-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.youtube_url != blank %}
                      <a href="{{ block.settings.youtube_url }}" target="_blank" aria-label="YouTube" class="social-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.tiktok_url != blank %}
                      <a href="{{ block.settings.tiktok_url }}" target="_blank" aria-label="TikTok" class="social-icon">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="currentColor">
                          <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z"/>
                        </svg>
                      </a>
                    {% endif %}
                  </div>
                </div>
              {% endif %}

            {% when 'store_hours' %}
              <h3>{{ block.settings.heading | default: 'STORE HOURS' }}</h3>
              <div class="hours-list">
                {% comment %} Flexible store hours - show each day if enabled {% endcomment %}
                
                {% if block.settings.show_monday and block.settings.monday_hours != blank %}
                  <div class="hours-item {% if block.settings.monday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Monday:</span>
                    <span class="time">{{ block.settings.monday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_tuesday and block.settings.tuesday_hours != blank %}
                  <div class="hours-item {% if block.settings.tuesday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Tuesday:</span>
                    <span class="time">{{ block.settings.tuesday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_wednesday and block.settings.wednesday_hours != blank %}
                  <div class="hours-item {% if block.settings.wednesday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Wednesday:</span>
                    <span class="time">{{ block.settings.wednesday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_thursday and block.settings.thursday_hours != blank %}
                  <div class="hours-item {% if block.settings.thursday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Thursday:</span>
                    <span class="time">{{ block.settings.thursday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_friday and block.settings.friday_hours != blank %}
                  <div class="hours-item {% if block.settings.friday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Friday:</span>
                    <span class="time">{{ block.settings.friday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_saturday and block.settings.saturday_hours != blank %}
                  <div class="hours-item {% if block.settings.saturday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Saturday:</span>
                    <span class="time">{{ block.settings.saturday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_sunday and block.settings.sunday_hours != blank %}
                  <div class="hours-item {% if block.settings.sunday_hours contains 'Closed' %}closed{% endif %}">
                    <span class="day">Sunday:</span>
                    <span class="time">{{ block.settings.sunday_hours }}</span>
                  </div>
                {% endif %}
                
                {% comment %} Combined days options for common patterns {% endcomment %}
                {% if block.settings.show_weekday_combined and block.settings.weekday_range != blank %}
                  <div class="hours-item">
                    <span class="day">{{ block.settings.weekday_range }}:</span>
                    <span class="time">{{ block.settings.weekday_hours }}</span>
                  </div>
                {% endif %}
                
                {% if block.settings.show_closed_combined and block.settings.closed_days != blank %}
                  <div class="hours-item closed">
                    <span class="day">{{ block.settings.closed_days }}:</span>
                    <span class="time">Closed</span>
                  </div>
                {% endif %}
              </div>
              
              {% comment %} Policies integrated into Store Hours {% endcomment %}
              {% if block.settings.show_policies %}
                <div class="policies-section">
                  <h3>{{ block.settings.policies_heading | default: 'POLICIES' }}</h3>
                  <div class="policy-links">
                    {% if block.settings.warranty_url != blank %}
                      <a href="{{ block.settings.warranty_url }}" target="_blank">{{ block.settings.warranty_text | default: 'Warranty' }}</a>
                    {% endif %}
                    {% if block.settings.privacy_url != blank %}
                      <a href="{{ block.settings.privacy_url }}" target="_blank">{{ block.settings.privacy_text | default: 'Privacy' }}</a>
                    {% endif %}
                    {% if block.settings.terms_url != blank %}
                      <a href="{{ block.settings.terms_url }}" target="_blank">{{ block.settings.terms_text | default: 'Terms of Service' }}</a>
                    {% endif %}
                  </div>
                </div>
              {% endif %}

            {% when 'reviews' %}
              <h3>{{ block.settings.heading | default: 'REVIEWS' }}</h3>
              <div class="reviews-container">
                
                {% if block.settings.show_google_reviews %}
                  <div class="review-platform">
                    <div class="review-header">
                      <div class="review-platform-info">
                        <div class="review-platform-logo">
                          <svg width="16" height="16" viewBox="0 0 24 24">
                            <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                            <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                            <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                            <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                          </svg>
                          <span class="platform-name">Google</span>
                        </div>
                        <div class="review-rating">
                          <div class="stars">
                            {% for i in (1..5) %}
                              <span class="star">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-text">{{ block.settings.google_rating | default: '4.9' }} ({{ block.settings.google_count | default: '568' }})</span>
                        </div>
                      </div>
                      {% if block.settings.google_review_url != blank %}
                        <a href="{{ block.settings.google_review_url }}" target="_blank" class="review-link">
                          Leave a Google Review
                        </a>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
                
                {% if block.settings.show_yelp_reviews %}
                  <div class="review-platform">
                    <div class="review-header">
                      <div class="review-platform-info">
                        <div class="review-platform-logo">
                          <svg width="16" height="16" viewBox="0 0 24 24">
                            <circle cx="12" cy="12" r="10" fill="#FF1A1A"/>
                            <path d="M12 2.5L15 9h6l-4.5 3.5 1.5 6-6-4.5-6 4.5 1.5-6L4 9h6z" fill="white"/>
                          </svg>
                          <span class="platform-name">Yelp</span>
                        </div>
                        <div class="review-rating">
                          <div class="stars">
                            {% for i in (1..5) %}
                              <span class="star">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-text">{{ block.settings.yelp_rating | default: '4.9' }} ({{ block.settings.yelp_count | default: '9' }})</span>
                        </div>
                      </div>
                      {% if block.settings.yelp_review_url != blank %}
                        <a href="{{ block.settings.yelp_review_url }}" target="_blank" class="review-link">
                          Leave a Yelp Review
                        </a>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
                
                {% if block.settings.show_facebook_reviews %}
                  <div class="review-platform">
                    <div class="review-header">
                      <div class="review-platform-info">
                        <div class="review-platform-logo">
                          <svg width="16" height="16" viewBox="0 0 24 24">
                            <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="#1877F2"/>
                          </svg>
                          <span class="platform-name">Facebook</span>
                        </div>
                        <div class="review-rating">
                          <div class="stars">
                            {% for i in (1..5) %}
                              <span class="star">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-text">{{ block.settings.facebook_rating | default: '4.9' }} ({{ block.settings.facebook_count | default: '311' }})</span>
                        </div>
                      </div>
                      {% if block.settings.facebook_review_url != blank %}
                        <a href="{{ block.settings.facebook_review_url }}" target="_blank" class="review-link">
                          Leave a Facebook Review
                        </a>
                      {% endif %}
                    </div>
                  </div>
                {% endif %}
              </div>

              
          {% endcase %}
        </div>
      {% endfor %}
    </div>

    {% if section.settings.show_copyright %}
      <div class="dothan-footer-bottom">
        <p>{{ section.settings.copyright_text | default: '© ' | append: 'now' | date: '%Y' | append: ' ' | append: shop.name | append: '. All rights reserved.' }}{% if section.settings.main_website_url %} | <a href="{{ section.settings.main_website_url }}" target="_blank">{{ section.settings.main_website_text | default: 'Visit our main website' }}</a>{% endif %}</p>
      </div>
    {% endif %}
  </div>
</footer>

<style>
  .dothan-footer {
    background-color: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 48px 0 24px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #495057;
    font-size: 14px;
  }

  .dothan-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .dothan-footer-content {
    display: grid;
    grid-template-columns: 1fr 1fr 1fr;
    gap: 48px;
    margin-bottom: 32px;
    align-items: start;
  }

  .dothan-footer-section h3 {
    color: #6c757d;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 16px 0;
  }

  /* Contact Us Section */
  .dothan-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .logo-box {
    width: 48px;
    height: 48px;
    background-color: #333;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 20px;
    border-radius: 4px;
  }

  .logo-text-sub {
    font-size: 11px;
    font-weight: 600;
    line-height: 1.2;
    color: #333;
    letter-spacing: 0.5px;
  }

  .contact-item {
    margin-bottom: 8px;
    color: #495057;
    line-height: 1.4;
  }

  .contact-item a {
    color: #495057;
    text-decoration: none;
  }

  .contact-item a:hover {
    text-decoration: underline;
  }

  /* Store Hours */
  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .hours-item .day {
    font-weight: 500;
  }

  .hours-item .time {
    color: #6c757d;
  }

  .hours-item.closed .time {
    color: #6c757d;
    font-style: italic;
  }

  /* Reviews Section */
  .reviews-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .review-platform {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 16px;
    background: white;
    cursor: pointer;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .review-platform:hover {
    background: #f8f9fa;
    border-color: #dee2e6;
  }

  .review-header {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .review-platform-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .review-platform-logo {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .platform-name {
    font-weight: 600;
    color: #333;
  }

  .review-rating {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .stars {
    color: #ffc107;
    font-size: 14px;
  }

  .rating-text {
    font-size: 13px;
    color: #6c757d;
    font-weight: 500;
  }

  .review-link {
    display: inline-block;
    color: #007bff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 500;
    padding: 4px 0;
  }

  .review-link:hover {
    color: #0056b3;
    text-decoration: none;
  }

  /* Social Media Section integrated into Contact Us */
  .social-section {
    margin-top: 30px;
  }

  .social-section h3 {
    color: #6c757d;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 16px 0;
  }

  .social-icons {
    display: flex;
    gap: 16px;
  }

  .social-icon {
    color: #6c757d;
    transition: color 0.2s;
  }

  .social-icon:hover {
    color: #333;
  }

  /* Policies Section integrated into Store Hours */
  .policies-section {
    margin-top: 30px;
  }

  .policies-section h3 {
    color: #6c757d;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 16px 0;
  }

  /* Policies */
  .policy-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .policy-links a {
    color: #495057;
    text-decoration: none;
  }

  .policy-links a:hover {
    text-decoration: underline;
  }

  /* Copyright */
  .dothan-footer-bottom {
    border-top: 1px solid #e9ecef;
    padding-top: 24px;
    text-align: center;
  }

  .dothan-footer-bottom p {
    margin: 0;
    color: #6c757d;
    font-size: 13px;
  }

  .dothan-footer-bottom a {
    color: #6c757d;
    text-decoration: none;
  }

  .dothan-footer-bottom a:hover {
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .dothan-footer-content {
      grid-template-columns: 1fr 1fr 1fr;
      gap: 32px;
    }
  }

  @media (max-width: 640px) {
    .dothan-footer {
      padding: 32px 0 16px;
    }
    
    .dothan-footer-content {
      grid-template-columns: 1fr;
      gap: 32px;
    }
    
    .review-header {
      text-align: center;
    }
    
    .social-icons {
      justify-content: center;
    }
    
    .social-section,
    .policies-section {
      text-align: center;
    }
  }
</style>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    // Make entire review cards clickable
    const reviewPlatforms = document.querySelectorAll('.review-platform');
    
    reviewPlatforms.forEach(function(platform) {
      const reviewLink = platform.querySelector('.review-link');
      
      if (reviewLink) {
        // Make entire card clickable
        platform.addEventListener('click', function(e) {
          // Don't interfere with direct link clicks
          if (e.target.tagName !== 'A') {
            reviewLink.click();
          }
        });
        
        // Add cursor pointer for entire card
        platform.style.cursor = 'pointer';
      }
    });
  });
</script>

