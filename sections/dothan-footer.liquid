{% comment %}
  Dothan Footer - Now with flexible block system
  Maintains existing design but uses configurable blocks
{% endcomment %}

<footer class="dothan-footer color-{{ section.settings.color_scheme }}">
  <div class="dothan-footer-container">
    <div class="dothan-footer-content" 
         data-columns="{{ section.settings.columns | default: 3 }}"
         style="display: flex; gap: {{ section.settings.column_gap | default: 60 }}px;">
      
      {% assign all_columns = '1,2,3,4' | split: ',' %}
      {% for column_num in all_columns %}
        {% if forloop.index <= section.settings.columns %}
          {% assign column_blocks = section.blocks | where: 'settings.column_position', column_num %}
          {% if column_blocks.size > 0 %}
            <div class="footer-column footer-column-{{ column_num }}">
              {% for block in column_blocks %}
                <div class="dothan-footer-section" 
                     id="block-{{ block.id }}"
                     {{ block.shopify_attributes }}>
                  
                  {% case block.type %}
            
            {% when 'business_info' %}
              <div class="details-section">
                {% if block.settings.show_logo %}
                  <div class="dothan-logo">
                    <div class="logo-box">
                      <span class="logo-text-main">{{ block.settings.logo_text | default: 'DN' }}</span>
                    </div>
                    <div class="logo-text-sub">
                      {{ block.settings.business_name | default: 'DOTHAN<br>NURSERIES' }}
                    </div>
                  </div>
                {% endif %}
                
                <div class="dothan-details">
                  {% if block.settings.heading != blank %}
                    <h3>{{ block.settings.heading }}</h3>
                  {% endif %}
                  
                  {% if block.settings.address != blank %}
                    <div class="detail-item">
                      <a href="{{ block.settings.maps_url | default: 'https://maps.app.goo.gl/7aW9EcFbGnDua6Hr7' }}" target="_blank" class="address-link">
                        {{ block.settings.address | newline_to_br }}
                      </a>
                    </div>
                  {% endif %}
                  
                  {% if block.settings.phone != blank %}
                    <div class="detail-item">
                      <a href="tel:{{ block.settings.phone | replace: '.', '' | replace: ' ', '' }}" class="phone-link">{{ block.settings.phone }}</a>
                      {% if block.settings.phone_2 != blank %}
                        <br><a href="tel:{{ block.settings.phone_2 | replace: '.', '' | replace: ' ', '' }}" class="phone-link">{{ block.settings.phone_2 }}</a>
                      {% endif %}
                    </div>
                  {% endif %}
                  
                  {% if block.settings.email != blank %}
                    <div class="detail-item">
                      <a href="mailto:{{ block.settings.email }}" class="email-link">
                        {{ block.settings.email }}
                      </a>
                    </div>
                  {% endif %}
                  
                  <!-- Social Media Icons -->
                  <div class="social-icons">
                    {% if block.settings.instagram_url != blank %}
                      <a href="{{ block.settings.instagram_url }}" target="_blank" aria-label="Instagram">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z" fill="currentColor"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.facebook_url != blank %}
                      <a href="{{ block.settings.facebook_url }}" target="_blank" aria-label="Facebook">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="currentColor"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.youtube_url != blank %}
                      <a href="{{ block.settings.youtube_url }}" target="_blank" aria-label="YouTube">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <path d="M23.498 6.186a3.016 3.016 0 0 0-2.122-2.136C19.505 3.545 12 3.545 12 3.545s-7.505 0-9.377.505A3.017 3.017 0 0 0 .502 6.186C0 8.07 0 12 0 12s0 3.93.502 5.814a3.016 3.016 0 0 0 2.122 2.136c1.871.505 9.376.505 9.376.505s7.505 0 9.377-.505a3.015 3.015 0 0 0 2.122-2.136C24 15.93 24 12 24 12s0-3.93-.502-5.814zM9.545 15.568V8.432L15.818 12l-6.273 3.568z" fill="currentColor"/>
                        </svg>
                      </a>
                    {% endif %}
                    {% if block.settings.tiktok_url != blank %}
                      <a href="{{ block.settings.tiktok_url }}" target="_blank" aria-label="TikTok">
                        <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                          <path d="M19.59 6.69a4.83 4.83 0 01-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 01-5.2 1.74 2.89 2.89 0 012.31-4.64 2.93 2.93 0 01.88.13V9.4a6.84 6.84 0 00-.88-.05A6.33 6.33 0 005 20.1a6.34 6.34 0 0010.86-4.43v-7a8.16 8.16 0 004.77 1.52v-3.4a4.85 4.85 0 01-1-.1z" fill="currentColor"/>
                        </svg>
                      </a>
                    {% endif %}
                  </div>
                </div>
              </div>

            {% when 'store_hours' %}
              <div class="hours-section">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                <div class="hours-list">
                  {% if block.settings.combine_weekdays %}
                    <div class="hours-item">
                      <span class="days">{{ block.settings.weekdays_label | default: 'Tuesday - Friday' }}:</span>
                      <span class="times">{{ block.settings.tuesday | default: '9AM - 5PM' }}</span>
                    </div>
                  {% else %}
                    {% if block.settings.monday != blank %}
                      <div class="hours-item {% if block.settings.monday contains 'Closed' %}closed{% endif %}">
                        <span class="days">Monday:</span>
                        <span class="times">{{ block.settings.monday }}</span>
                      </div>
                    {% endif %}
                    {% if block.settings.tuesday != blank %}
                      <div class="hours-item {% if block.settings.tuesday contains 'Closed' %}closed{% endif %}">
                        <span class="days">Tuesday:</span>
                        <span class="times">{{ block.settings.tuesday }}</span>
                      </div>
                    {% endif %}
                    {% if block.settings.wednesday != blank %}
                      <div class="hours-item {% if block.settings.wednesday contains 'Closed' %}closed{% endif %}">
                        <span class="days">Wednesday:</span>
                        <span class="times">{{ block.settings.wednesday }}</span>
                      </div>
                    {% endif %}
                    {% if block.settings.thursday != blank %}
                      <div class="hours-item {% if block.settings.thursday contains 'Closed' %}closed{% endif %}">
                        <span class="days">Thursday:</span>
                        <span class="times">{{ block.settings.thursday }}</span>
                      </div>
                    {% endif %}
                    {% if block.settings.friday != blank %}
                      <div class="hours-item {% if block.settings.friday contains 'Closed' %}closed{% endif %}">
                        <span class="days">Friday:</span>
                        <span class="times">{{ block.settings.friday }}</span>
                      </div>
                    {% endif %}
                  {% endif %}
                  {% if block.settings.saturday != blank %}
                    <div class="hours-item {% if block.settings.saturday contains 'Closed' %}closed{% endif %}">
                      <span class="days">Saturday:</span>
                      <span class="times">{{ block.settings.saturday }}</span>
                    </div>
                  {% endif %}
                  {% if block.settings.sunday != blank and block.settings.monday != blank and block.settings.sunday contains 'Closed' and block.settings.monday contains 'Closed' %}
                    <div class="hours-item closed">
                      <span class="days">Sunday & Monday:</span>
                      <span class="times">Closed</span>
                    </div>
                  {% endif %}
                </div>
              </div>

            {% when 'policy_links' %}
              <div class="policy-section">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                <div class="policy-links">
                  {% if block.settings.warranty_url != blank %}
                    <a href="{{ block.settings.warranty_url }}" target="_blank">{{ block.settings.warranty_text | default: 'Warranty' }}</a>
                  {% endif %}
                  {% if block.settings.shipping_url != blank %}
                    <a href="{{ block.settings.shipping_url }}" target="_blank">{{ block.settings.shipping_text | default: 'Shipping' }}</a>
                  {% endif %}
                  {% if block.settings.returns_url != blank %}
                    <a href="{{ block.settings.returns_url }}" target="_blank">{{ block.settings.returns_text | default: 'Returns' }}</a>
                  {% endif %}
                </div>
              </div>
            
            {% when 'google_reviews' %}
              <div class="review-section">
                {% if block.settings.heading != blank %}
                  <h4>{{ block.settings.heading }}</h4>
                {% endif %}
                <div class="review-icons">
                  {% if block.settings.google_reviews_url != blank %}
                    <a href="{{ block.settings.google_reviews_url }}" target="_blank" aria-label="Google Reviews">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                        <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                        <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                        <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
                      </svg>
                    </a>
                  {% endif %}
                  {% if block.settings.yelp_url != blank %}
                    <a href="{{ block.settings.yelp_url }}" target="_blank" aria-label="Yelp Reviews">
                      <svg width="24" height="24" viewBox="0 0 24 24" fill="none">
                        <path d="M12.017 0C6.396 0 1.807 4.589 1.807 10.21 1.807 15.831 6.396 20.42 12.017 20.42c5.621 0 10.21-4.589 10.21-10.21C22.227 4.589 17.638.001 12.017.001zm0 18.655c-4.666 0-8.445-3.779-8.445-8.445s3.779-8.444 8.445-8.444 8.445 3.778 8.445 8.444-3.779 8.445-8.445 8.445z" fill="#D32323"/>
                        <path d="M15.108 8.717l-2.29.924-1.516-1.516.924-2.29c.152-.376.076-.808-.19-1.074l-.951-.951c-.342-.342-.895-.342-1.237 0l-.951.951c-.266.266-.342.698-.19 1.074l.924 2.29-1.516 1.516-2.29-.924c-.376-.152-.808-.076-1.074.19l-.951.951c-.342.342-.342.895 0 1.237l.951.951c.266.266.698.342 1.074.19l2.29-.924 1.516 1.516-.924 2.29c-.152.376-.076.808.19 1.074l.951.951c.342.342.895.342 1.237 0l.951-.951c.266-.266.342-.698.19-1.074l-.924-2.29 1.516-1.516 2.29.924c.376.152.808.076 1.074-.19l.951-.951c.342-.342.342-.895 0-1.237l-.951-.951c-.266-.266-.698-.342-1.074-.19z" fill="#D32323"/>
                      </svg>
                    </a>
                  {% endif %}
                </div>
              </div>

            {% when 'reviews' %}
              <div class="review-section">
                {% if block.settings.heading != blank %}
                  <h3>{{ block.settings.heading }}</h3>
                {% endif %}
                <div class="review-platforms">
                  {% if block.settings.show_google_reviews %}
                    <div class="review-platform">
                      <div class="platform-name">Google</div>
                      <div class="platform-row">
                        <svg class="platform-icon" width="24" height="24" viewBox="0 0 488 512" fill="none">
                          <g id="google-icon">
                            <path d="M488 261.8C488 403.3 391.1 504 248 504 110.8 504 0 393.2 0 256S110.8 8 248 8c66.8 0 123 24.5 166.3 64.9l-67.5 64.9C258.5 52.6 94.3 116.6 94.3 256c0 86.5 69.1 156.6 153.7 156.6 98.2 0 135-70.4 140.8-106.9H248v-85.3h236.1c2.3 12.7 3.9 24.9 3.9 41.4z" fill="#4285F4"/>
                          </g>
                        </svg>
                        <div class="platform-content">
                          {% assign rating_value = block.settings.google_rating | default: "4.9" | times: 1.0 %}
                          <div class="stars-container" data-rating="{{ rating_value }}">
                            {% for i in (1..5) %}
                              {% assign star_fill = 0 %}
                              {% if rating_value >= i %}
                                {% assign star_fill = 100 %}
                              {% elsif rating_value > i | minus: 1 %}
                                {% assign decimal_part = rating_value | minus: i | plus: 1 | times: 100 %}
                                {% assign star_fill = decimal_part %}
                              {% endif %}
                              <span class="star" style="--star-fill: {{ star_fill }}%">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-value">{{ block.settings.google_rating | default: "4.9" }}</span>
                          <span class="review-count">({{ block.settings.google_count | default: "568" }})</span>
                        </div>
                      </div>
                      <a href="{{ block.settings.google_reviews_url | default: '#' }}" target="_blank" class="leave-review-link">Leave a Google Review</a>
                    </div>
                  {% endif %}

                  {% if block.settings.show_yelp_reviews %}
                    <div class="review-platform">
                      <div class="platform-name">Yelp</div>
                      <div class="platform-row">
                        <svg class="platform-icon yelp-icon" width="24" height="24" viewBox="0 0 384 512" fill="none">
                          <path d="M42.9 240.32l99.62 48.61c19.2 9.4 16.2 37.51-4.5 42.71L30.5 358.45a22.79 22.79 0 0 1-28.21-19.6 197.16 197.16 0 0 1 9-85.32 22.8 22.8 0 0 1 31.61-13.21zm44 239.25a199.45 199.45 0 0 0 79.42 32.11A22.78 22.78 0 0 0 192.94 490l3.9-110.82c.7-21.3-25.5-31.91-39.81-16.1l-74.21 82.4a22.82 22.82 0 0 0 4.09 34.09zm145.34-109.92l58.81 94a22.93 22.93 0 0 0 34 5.5 198.36 198.36 0 0 0 52.71-67.61A23 23 0 0 0 364.17 370l-105.42-34.26c-20.31-6.5-37.81 15.8-26.51 33.91zm148.33-132.23a197.44 197.44 0 0 0-50.41-69.31 22.85 22.85 0 0 0-34 4.4l-62 91.92c-11.9 17.7 4.7 40.61 25.2 34.71L366 268.63a23 23 0 0 0 14.61-31.21zM62.11 30.18a22.86 22.86 0 0 0-9.9 32l104.12 180.44c11.7 20.2 42.61 11.9 42.61-11.4V22.88a22.67 22.67 0 0 0-24.5-22.8 320.37 320.37 0 0 0-112.33 30.1z" fill="#c41200"/>
                        </svg>
                        <div class="platform-content">
                          {% assign rating_value = block.settings.yelp_rating | default: "4.5" | times: 1.0 %}
                          <div class="stars-container" data-rating="{{ rating_value }}">
                            {% for i in (1..5) %}
                              {% assign star_fill = 0 %}
                              {% if rating_value >= i %}
                                {% assign star_fill = 100 %}
                              {% elsif rating_value > i | minus: 1 %}
                                {% assign decimal_part = rating_value | minus: i | plus: 1 | times: 100 %}
                                {% assign star_fill = decimal_part %}
                              {% endif %}
                              <span class="star" style="--star-fill: {{ star_fill }}%">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-value">{{ block.settings.yelp_rating | default: "4.5" }}</span>
                          <span class="review-count">({{ block.settings.yelp_count | default: "89" }})</span>
                        </div>
                      </div>
                      <a href="{{ block.settings.yelp_url | default: '#' }}" target="_blank" class="leave-review-link">Leave a Yelp Review</a>
                    </div>
                  {% endif %}

                  {% if block.settings.show_facebook_reviews %}
                    <div class="review-platform">
                      <div class="platform-name">Facebook</div>
                      <div class="platform-row">
                        <svg class="platform-icon" width="24" height="24" viewBox="0 0 320 512" fill="none">
                          <path d="M279.14 288l14.22-92.66h-88.91v-60.13c0-25.35 12.42-50.06 52.24-50.06h40.42V6.26S260.43 0 225.36 0c-73.22 0-121.08 44.38-121.08 124.72v70.62H22.89V288h81.39v224h100.17V288z" fill="#1877F2"/>
                        </svg>
                        <div class="platform-content">
                          {% assign rating_value = block.settings.facebook_rating | default: "4.8" | times: 1.0 %}
                          <div class="stars-container" data-rating="{{ rating_value }}">
                            {% for i in (1..5) %}
                              {% assign star_fill = 0 %}
                              {% if rating_value >= i %}
                                {% assign star_fill = 100 %}
                              {% elsif rating_value > i | minus: 1 %}
                                {% assign decimal_part = rating_value | minus: i | plus: 1 | times: 100 %}
                                {% assign star_fill = decimal_part %}
                              {% endif %}
                              <span class="star" style="--star-fill: {{ star_fill }}%">★</span>
                            {% endfor %}
                          </div>
                          <span class="rating-value">{{ block.settings.facebook_rating | default: "4.8" }}</span>
                          <span class="review-count">({{ block.settings.facebook_count | default: "42" }})</span>
                        </div>
                      </div>
                      <a href="{{ block.settings.facebook_url | default: '#' }}" target="_blank" class="leave-review-link">Leave a Facebook Review</a>
                    </div>
                  {% endif %}
                </div>
              </div>
              
                  {% endcase %}
                </div>
              {% endfor %}
            </div>
          {% endif %}
        {% endif %}
      {% endfor %}
    </div>

    {% if section.settings.show_copyright %}
      <!-- Copyright Section -->
      <div class="dothan-footer-bottom">
        <p>{{ section.settings.copyright_text | default: '&copy; ' | append: 'now' | date: '%Y' | append: ' ' | append: shop.name | append: '. All rights reserved.' }}{% if section.settings.main_website_url %} | <a href="{{ section.settings.main_website_url }}" target="_blank">{{ section.settings.main_website_text | default: 'Visit our main website' }}</a>{% endif %}</p>
      </div>
    {% endif %}
    </div>
  </div>
</footer>

<style>
  .dothan-footer {
    background-color: {{ section.settings.background_color | default: '#f8f9fa' }};
    border-top: {{ section.settings.border_width | default: 1 }}px solid {{ section.settings.border_color | default: '#e9ecef' }};
    padding: {{ section.settings.padding_top | default: 60 }}px 0 {{ section.settings.padding_bottom | default: 30 }}px;
    margin-top: auto;
    font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
    color: {{ section.settings.text_color | default: '#495057' }};
  }

  .dothan-footer-container {
    max-width: {{ section.settings.container_width | default: 1200 }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .dothan-footer-content {
    display: flex;
    margin-bottom: 40px;
  }

  .footer-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  /* Logo Section */
  .details-section {
    display: flex;
    flex-direction: column;
    gap: 30px;
  }

  .dothan-logo {
    display: flex;
    align-items: center;
    gap: 15px;
    margin-bottom: 20px;
  }

  .logo-box {
    width: 60px;
    height: 60px;
    background-color: #333;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 24px;
    border-radius: 4px;
  }

  .logo-text-sub {
    font-size: 12px;
    font-weight: bold;
    line-height: 1.2;
    color: #333;
    letter-spacing: 1px;
  }

  /* Details Section */
  .dothan-details h3 {
    color: #6c757d;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .detail-item {
    margin-bottom: 15px;
    line-height: 1.6;
  }

  .detail-item a {
    color: #495057;
    text-decoration: none;
    transition: color 0.3s ease;
  }

  .detail-item a:hover {
    color: #28a745;
    text-decoration: underline;
  }

  .address-link {
    display: block;
  }

  .social-icons {
    display: flex;
    gap: 15px;
    margin-top: 20px;
  }

  .social-icons a {
    color: #6c757d;
    transition: color 0.3s ease;
  }

  .social-icons a:hover {
    color: #28a745;
  }

  /* Store Hours Section */
  .hours-section h3 {
    color: #6c757d;
    font-size: 18px;
    font-weight: 400;
    margin-bottom: 20px;
    letter-spacing: 1px;
    text-transform: uppercase;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    color: #495057;
  }

  .hours-item.closed {
    color: #6c757d;
  }

  .days {
    font-weight: 500;
  }

  .times {
    color: #6c757d;
  }

  /* Store Policy Section */
  .policy-section h3 {
