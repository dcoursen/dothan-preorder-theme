    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 10px;
  }

  .platform-content {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .platform-icon {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

