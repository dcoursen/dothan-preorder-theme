{% comment %}
  Advanced Dothan Footer - Fixed version with proper column management
  Features: Flexible columns (1-4), column positioning, all block types working
{% endcomment %}

<footer class="dothan-footer color-{{ section.settings.color_scheme }}"
        style="background-color: {{ section.settings.background_color | default: '#f8f9fa' }};">
  <div class="dothan-footer-container">
    <div class="dothan-footer-content" 
         data-columns="{{ section.settings.columns | default: 3 }}">
      
      {% comment %} Group blocks by column position {% endcomment %}
      {% assign column_1_blocks = section.blocks | where: 'settings.column_position', '1' %}
      {% assign column_2_blocks = section.blocks | where: 'settings.column_position', '2' %}
      {% assign column_3_blocks = section.blocks | where: 'settings.column_position', '3' %}
      {% assign column_4_blocks = section.blocks | where: 'settings.column_position', '4' %}
      {% assign auto_blocks = section.blocks | where: 'settings.column_position', blank %}
      
      {% comment %} Render each column as a separate flexbox container {% endcomment %}
      
      {% comment %} Column 1 {% endcomment %}
      {% if column_1_blocks.size > 0 %}
        <div class="dothan-footer-column" data-column="1">
          {% for block in column_1_blocks %}
            {% render 'footer-block-renderer', block: block %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} Column 2 {% endcomment %}
      {% if column_2_blocks.size > 0 %}
        <div class="dothan-footer-column" data-column="2">
          {% for block in column_2_blocks %}
            {% render 'footer-block-renderer', block: block %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} Column 3 {% endcomment %}
      {% if column_3_blocks.size > 0 %}
        <div class="dothan-footer-column" data-column="3">
          {% for block in column_3_blocks %}
            {% render 'footer-block-renderer', block: block %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} Column 4 {% endcomment %}
      {% if column_4_blocks.size > 0 %}
        <div class="dothan-footer-column" data-column="4">
          {% for block in column_4_blocks %}
            {% render 'footer-block-renderer', block: block %}
          {% endfor %}
        </div>
      {% endif %}
      
      {% comment %} Auto-positioned blocks {% endcomment %}
      {% if auto_blocks.size > 0 %}
        <div class="dothan-footer-column" data-column="auto">
          {% for block in auto_blocks %}
            {% render 'footer-block-renderer', block: block %}
          {% endfor %}
        </div>
      {% endif %}

    {% if section.settings.show_copyright %}
      <div class="dothan-footer-bottom">
        <p>{{ section.settings.copyright_text | default: 'Â© ' | append: 'now' | date: '%Y' | append: ' ' | append: shop.name | append: '. All rights reserved.' }}{% if section.settings.main_website_url %} | <a href="{{ section.settings.main_website_url }}" target="_blank">{{ section.settings.main_website_text | default: 'Visit our main website' }}</a>{% endif %}</p>
      </div>
    {% endif %}
  </div>
</footer>

<style>
  .dothan-footer {
    background-color: #f8f9fa;
    border-top: 1px solid #e9ecef;
    padding: 48px 0 24px;
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
    color: #495057;
    font-size: 14px;
  }

  .dothan-footer-container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
  }

  .dothan-footer-content {
    display: flex;
    gap: {{ section.settings.column_gap | default: 50 }}px;
    margin-bottom: 32px;
    align-items: flex-start;
    justify-content: space-between;
  }

  /* Individual column containers */
  .dothan-footer-column {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  /* Stack blocks in same column vertically */
  .dothan-footer-section {
    margin-bottom: 0; /* Remove margin since we use gap on parent */
  }

  .dothan-footer-section h3 {
    color: #6c757d;
    font-size: 14px;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    margin: 0 0 16px 0;
  }

  /* Contact Us Section */
  .dothan-logo {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 16px;
  }

  .logo-box {
    width: 48px;
    height: 48px;
    background-color: #333;
    color: white;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: bold;
    font-size: 20px;
    border-radius: 4px;
  }

  .logo-text-sub {
    font-size: 11px;
    font-weight: 600;
    line-height: 1.2;
    color: #333;
    letter-spacing: 0.5px;
  }

  .contact-item {
    margin-bottom: 8px;
    color: #495057;
    line-height: 1.4;
  }

  .contact-item a {
    color: #495057;
    text-decoration: none;
  }

  .contact-item a:hover {
    text-decoration: underline;
  }

  /* Store Hours */
  .hours-list {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .hours-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .hours-item .day {
    font-weight: 500;
  }

  .hours-item .time {
    color: #6c757d;
  }

  .hours-item.closed .time {
    color: #6c757d;
    font-style: italic;
  }

  /* Reviews Section */
  .reviews-container {
    display: flex;
    flex-direction: column;
    gap: 20px;
  }

  .review-platform {
    border: 1px solid #e9ecef;
    border-radius: 8px;
    padding: 16px;
    background: white;
    cursor: pointer;
    transition: background-color 0.2s, border-color 0.2s;
  }

  .review-platform:hover {
    background: #f8f9fa;
    border-color: #dee2e6;
  }

  .review-header {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .review-platform-info {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .review-platform-logo {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .platform-name {
    font-weight: 600;
    color: #333;
  }

  .review-rating {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .stars {
    color: #ffc107;
    font-size: 14px;
  }

  .rating-text {
    font-size: 13px;
    color: #6c757d;
    font-weight: 500;
  }

  .review-link {
    display: inline-block;
    color: #007bff;
    text-decoration: none;
    font-size: 12px;
    font-weight: 500;
    padding: 4px 0;
  }

  .review-link:hover {
    color: #0056b3;
    text-decoration: none;
  }

  /* Social Media */
  .social-icons {
    display: flex;
    gap: 16px;
  }

  .social-icon {
    color: #6c757d;
    transition: color 0.2s;
  }

  .social-icon:hover {
    color: #333;
  }

  /* Policies */
  .policy-links {
    display: flex;
    flex-direction: column;
    gap: 8px;
  }

  .policy-links a {
    color: #495057;
    text-decoration: none;
  }

  .policy-links a:hover {
    text-decoration: underline;
  }

  /* Copyright */
  .dothan-footer-bottom {
    border-top: 1px solid #e9ecef;
    padding-top: 24px;
    text-align: center;
  }

  .dothan-footer-bottom p {
    margin: 0;
    color: #6c757d;
    font-size: 13px;
  }

  .dothan-footer-bottom a {
    color: #6c757d;
    text-decoration: none;
  }

  .dothan-footer-bottom a:hover {
    text-decoration: underline;
  }

  /* Responsive Design */
  @media (max-width: 968px) {
    .dothan-footer-content {
      flex-wrap: wrap;
    }
    
    .dothan-footer-column {
      flex-basis: calc(50% - 24px);
      min-width: 250px;
    }
  }

  @media (max-width: 640px) {
    .dothan-footer {
      padding: 32px 0 16px;
    }
    
    .dothan-footer-content {
      flex-direction: column;
      gap: 32px;
    }
    
    .dothan-footer-column {
      flex-basis: auto;
      min-width: auto;
    }
    
    .review-header {
      text-align: center;
    }
    
    .social-icons {
      justify-content: center;
    }
  }
</style>

