{% comment %}
  Reviews Footer Block
  Clean presentation with ratings and review platform links
{% endcomment %}

<div class="footer-reviews">
  {% if block.settings.heading != blank %}
    <h3>{{ block.settings.heading }}</h3>
  {% endif %}

  {% comment %} Review Platforms with Ratings {% endcomment %}
  <div class="review-platforms" data-layout="{{ block.settings.layout_style | default: 'stacked' }}">
    
    {% comment %} Google Reviews {% endcomment %}
    {% if block.settings.google_reviews_url != blank %}
      <div class="review-platform google-platform">
        <a href="{{ block.settings.google_reviews_url }}" target="_blank" class="platform-link">
          {% assign google_rating = block.settings.google_rating | default: 0.0 | times: 1.0 %}
          {% assign google_count = block.settings.google_count | default: 0 %}
          
          <div class="platform-content">
            <div class="platform-icon-wrapper">
              <svg width="{{ block.settings.icon_size | default: 20 }}" height="{{ block.settings.icon_size | default: 20 }}" viewBox="0 0 24 24" fill="none" class="platform-icon">
                <path d="M22.56 12.25c0-.78-.07-1.53-.2-2.25H12v4.26h5.92c-.26 1.37-1.04 2.53-2.21 3.31v2.77h3.57c2.08-1.92 3.28-4.74 3.28-8.09z" fill="#4285F4"/>
                <path d="M12 23c2.97 0 5.46-.98 7.28-2.66l-3.57-2.77c-.98.66-2.23 1.06-3.71 1.06-2.86 0-5.29-1.93-6.16-4.53H2.18v2.84C3.99 20.53 7.7 23 12 23z" fill="#34A853"/>
                <path d="M5.84 14.09c-.22-.66-.35-1.36-.35-2.09s.13-1.43.35-2.09V7.07H2.18C1.43 8.55 1 10.22 1 12s.43 3.45 1.18 4.93l2.85-2.22.81-.62z" fill="#FBBC05"/>
                <path d="M12 5.38c1.62 0 3.06.56 4.21 1.64l3.15-3.15C17.45 2.09 14.97 1 12 1 7.7 1 3.99 3.47 2.18 7.07l3.66 2.84c.87-2.6 3.3-4.53 6.16-4.53z" fill="#EA4335"/>
              </svg>
            </div>
            
            <div class="platform-info">
              <div class="platform-name">Google</div>
              {% if google_rating > 0 %}
                <div class="star-rating">
                  {% for i in (1..5) %}
                    {% assign current_star = i %}
                    {% assign star_fill = 0 %}
                    {% assign rating_diff = google_rating | minus: current_star | plus: 1 %}
                    
                    {% if rating_diff >= 1 %}
                      {% assign star_fill = 100 %}
                    {% elsif rating_diff > 0 %}
                      {% assign star_fill = rating_diff | times: 100 | round %}
                    {% endif %}
                    
                    <span class="star" style="--fill-percent: {{ star_fill }}%;">★</span>
                  {% endfor %}
                  <span class="rating-text">{{ google_rating }}{% if google_count > 0 %} ({{ google_count }}){% endif %}</span>
                </div>
              {% endif %}
              <div class="platform-cta">Leave a Google Review</div>
            </div>
          </div>
        </a>
      </div>
    {% endif %}

    {% comment %} Yelp Reviews {% endcomment %}
    {% if block.settings.yelp_url != blank %}
      <div class="review-platform yelp-platform">
        <a href="{{ block.settings.yelp_url }}" target="_blank" class="platform-link">
          {% assign yelp_rating = block.settings.yelp_rating | default: 0.0 | times: 1.0 %}
          {% assign yelp_count = block.settings.yelp_count | default: 0 %}
          
          <div class="platform-content">
            <div class="platform-icon-wrapper">
              <svg width="{{ block.settings.icon_size | default: 20 }}" height="{{ block.settings.icon_size | default: 20 }}" viewBox="0 0 24 24" fill="none" class="platform-icon">
                <circle cx="12" cy="12" r="11" fill="#FF1A1A" stroke="#D32323" stroke-width="1"/>
                <text x="12" y="16.5" text-anchor="middle" fill="white" font-family="Arial, sans-serif" font-size="12" font-weight="bold">yelp</text>
              </svg>
            </div>
            
            <div class="platform-info">
              <div class="platform-name">Yelp</div>
              {% if yelp_rating > 0 %}
                <div class="star-rating">
                  {% for i in (1..5) %}
                    {% assign current_star = i %}
                    {% assign star_fill = 0 %}
                    {% assign rating_diff = yelp_rating | minus: current_star | plus: 1 %}
                    
                    {% if rating_diff >= 1 %}
                      {% assign star_fill = 100 %}
                    {% elsif rating_diff > 0 %}
                      {% assign star_fill = rating_diff | times: 100 | round %}
                    {% endif %}
                    
                    <span class="star" style="--fill-percent: {{ star_fill }}%;">★</span>
                  {% endfor %}
                  <span class="rating-text">{{ yelp_rating }}{% if yelp_count > 0 %} ({{ yelp_count }}){% endif %}</span>
                </div>
              {% endif %}
              <div class="platform-cta">Leave a Yelp Review</div>
            </div>
          </div>
        </a>
      </div>
    {% endif %}

    {% comment %} Facebook Reviews {% endcomment %}
    {% if block.settings.facebook_url != blank %}
      <div class="review-platform facebook-platform">
        <a href="{{ block.settings.facebook_url }}" target="_blank" class="platform-link">
          {% assign facebook_rating = block.settings.facebook_rating | default: 0.0 | times: 1.0 %}
          {% assign facebook_count = block.settings.facebook_count | default: 0 %}
          
          <div class="platform-content">
            <div class="platform-icon-wrapper">
              <svg width="{{ block.settings.icon_size | default: 20 }}" height="{{ block.settings.icon_size | default: 20 }}" viewBox="0 0 24 24" fill="none" class="platform-icon">
                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z" fill="#1877F2"/>
              </svg>
            </div>
            
            <div class="platform-info">
              <div class="platform-name">Facebook</div>
              {% if facebook_rating > 0 %}
                <div class="star-rating">
                  {% for i in (1..5) %}
                    {% assign current_star = i %}
                    {% assign star_fill = 0 %}
                    {% assign rating_diff = facebook_rating | minus: current_star | plus: 1 %}
                    
                    {% if rating_diff >= 1 %}
                      {% assign star_fill = 100 %}
                    {% elsif rating_diff > 0 %}
                      {% assign star_fill = rating_diff | times: 100 | round %}
                    {% endif %}
                    
                    <span class="star" style="--fill-percent: {{ star_fill }}%;">★</span>
                  {% endfor %}
                  <span class="rating-text">{{ facebook_rating }}{% if facebook_count > 0 %} ({{ facebook_count }}){% endif %}</span>
                </div>
              {% endif %}
              <div class="platform-cta">Leave a Facebook Review</div>
            </div>
          </div>
        </a>
      </div>
    {% endif %}

  </div>


</div>

