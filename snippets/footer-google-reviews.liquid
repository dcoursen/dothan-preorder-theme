<style>
  .footer-reviews {
    font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
  }

  /* Layout containers */
  .footer-reviews .review-platforms[data-layout="stacked"] {
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-reviews .review-platforms[data-layout="horizontal"] {
    display: flex;
    flex-wrap: wrap;
    gap: 16px;
  }

  /* Platform styling */
  .footer-reviews .review-platform {
    border: 1px solid #e9ecef;
    border-radius: 6px;
    transition: all 0.3s ease;
    flex: 1;
    min-height: 80px;
    display: flex;
  }

  .footer-reviews .review-platform:hover {
    transform: translateY(-1px);
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.1);
  }

  .footer-reviews .platform-link {
    display: flex;
    text-decoration: none;
    color: inherit;
    padding: 12px;
    width: 100%;
    align-items: center;
  }

  /* Stacked layout styling */
  .footer-reviews .review-platforms[data-layout="stacked"] .platform-content {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .platform-icon-wrapper {
    flex-shrink: 0;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .platform-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .platform-name {
    font-weight: 500;
    color: #495057;
    font-size: 14px;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .star-rating {
    display: flex;
    align-items: center;
    gap: 4px;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .platform-name {
    order: 1;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .star-rating {
    order: 2;
  }

  .footer-reviews .review-platforms[data-layout="stacked"] .platform-cta {
    order: 3;
  }

  /* Horizontal layout styling */
  .footer-reviews .review-platforms[data-layout="horizontal"] .platform-content {
    display: flex;
    align-items: center;
    gap: 8px;
  }

  .footer-reviews .review-platforms[data-layout="horizontal"] .platform-icon-wrapper {
    flex-shrink: 0;
  }

  .footer-reviews .review-platforms[data-layout="horizontal"] .platform-info {
    display: flex;
    flex-direction: column;
    gap: 4px;
  }

  .footer-reviews .review-platforms[data-layout="horizontal"] .platform-name {
    font-weight: 500;
    color: #495057;
    font-size: 13px;
    line-height: 1;
  }

  .footer-reviews .review-platforms[data-layout="horizontal"] .star-rating {
    display: flex;
    align-items: center;
    gap: 2px;
  }

  /* Star styling with partial fills */
  .footer-reviews .star {
    position: relative;
    font-size: 14px;
    line-height: 1;
    color: #dee2e6;
    transition: all 0.2s ease;
  }

  .footer-reviews .star::before {
    content: '★';
    position: absolute;
    top: 0;
    left: 0;
    width: var(--fill-percent, 0%);
    overflow: hidden;
    color: #ffc107;
  }

  .footer-reviews .rating-text {
    font-size: 12px;
    color: #6c757d;
    font-weight: 500;
    margin-left: 4px;
  }

  .footer-reviews .platform-cta {
    font-size: 11px;
    color: #28a745;
    font-weight: 500;
    margin-top: 2px;
    opacity: 0.8;
  }

  .footer-reviews .platform-link:hover .platform-cta {
    opacity: 1;
  }

  /* Platform hover effects */
  .footer-reviews .google-platform:hover {
    border-color: #4285F4;
  }

  .footer-reviews .yelp-platform:hover {
    border-color: #FF1A1A;
  }

  .footer-reviews .facebook-platform:hover {
    border-color: #1877F2;
  }


  /* Mobile responsive */
  @media (max-width: 640px) {
    .footer-reviews .review-platforms[data-layout="horizontal"] {
      flex-direction: column;
      gap: 12px;
    }

    .footer-reviews .review-platforms[data-layout="stacked"] .platform-info {
      flex-direction: column;
      align-items: flex-start;
      gap: 4px;
    }
  }
</style>

