{% comment %}
  Store Hours Footer Block
  Flexible store hours display with weekday combination option
{% endcomment %}

<div class="footer-store-hours">
  {% if block.settings.heading != blank %}
    <h3>{{ block.settings.heading }}</h3>
  {% endif %}

  <div class="hours-list">
    {% if block.settings.combine_weekdays and block.settings.tuesday != blank %}
      {% comment %} Show combined weekdays if enabled and have consistent hours {% endcomment %}
      <div class="hours-item">
        <span class="days">{{ block.settings.weekdays_label | default: 'Monday - Friday' }}:</span>
        <span class="times">{{ block.settings.tuesday }}</span>
      </div>
    {% else %}
      {% comment %} Show individual days {% endcomment %}
      {% if block.settings.monday != blank %}
        <div class="hours-item {% if block.settings.monday contains 'Closed' or block.settings.monday contains 'closed' %}closed{% endif %}">
          <span class="days">Monday:</span>
          <span class="times">{{ block.settings.monday }}</span>
        </div>
      {% endif %}

      {% if block.settings.tuesday != blank %}
        <div class="hours-item {% if block.settings.tuesday contains 'Closed' or block.settings.tuesday contains 'closed' %}closed{% endif %}">
          <span class="days">Tuesday:</span>
          <span class="times">{{ block.settings.tuesday }}</span>
        </div>
      {% endif %}

      {% if block.settings.wednesday != blank %}
        <div class="hours-item {% if block.settings.wednesday contains 'Closed' or block.settings.wednesday contains 'closed' %}closed{% endif %}">
          <span class="days">Wednesday:</span>
          <span class="times">{{ block.settings.wednesday }}</span>
        </div>
      {% endif %}

      {% if block.settings.thursday != blank %}
        <div class="hours-item {% if block.settings.thursday contains 'Closed' or block.settings.thursday contains 'closed' %}closed{% endif %}">
          <span class="days">Thursday:</span>
          <span class="times">{{ block.settings.thursday }}</span>
        </div>
      {% endif %}

      {% if block.settings.friday != blank %}
        <div class="hours-item {% if block.settings.friday contains 'Closed' or block.settings.friday contains 'closed' %}closed{% endif %}">
          <span class="days">Friday:</span>
          <span class="times">{{ block.settings.friday }}</span>
        </div>
      {% endif %}
    {% endif %}

    {% if block.settings.saturday != blank %}
      <div class="hours-item {% if block.settings.saturday contains 'Closed' or block.settings.saturday contains 'closed' %}closed{% endif %}">
        <span class="days">Saturday:</span>
        <span class="times">{{ block.settings.saturday }}</span>
      </div>
    {% endif %}

    {% if block.settings.sunday != blank %}
      <div class="hours-item {% if block.settings.sunday contains 'Closed' or block.settings.sunday contains 'closed' %}closed{% endif %}">
        <span class="days">Sunday:</span>
        <span class="times">{{ block.settings.sunday }}</span>
      </div>
    {% endif %}

    {% comment %} Handle combined Sunday & Monday closed {% endcomment %}
    {% if block.settings.sunday contains 'Closed' and block.settings.monday contains 'Closed' %}
      <div class="hours-item closed">
        <span class="days">Sunday & Monday:</span>
        <span class="times">Closed</span>
      </div>
    {% endif %}
  </div>
</div>

<style>
  .footer-store-hours .hours-item {
    display: flex;
    justify-content: space-between;
    margin-bottom: 12px;
    color: #495057;
  }

  .footer-store-hours .hours-item.closed {
    color: #6c757d;
  }

  .footer-store-hours .days {
    font-weight: 500;
  }

  .footer-store-hours .times {
    color: #6c757d;
  }
</style>